<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnAddTeacher" android:text="Add Teacher" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnAddStudent" android:text="Add Student" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <Button android:id="@+id/btnManageTeacher" android:text="Manage Teacher" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <Button android:id="@+id/btnManageStudent" android:text="Manage Student" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>


</LinearLayout>
