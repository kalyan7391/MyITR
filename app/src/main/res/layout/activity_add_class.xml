<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:title="Add New Class"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner_teachers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class Name (e.g., Advanced Calculus)"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_class_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class Time (e.g., 10:00 AM - 11:00 AM)"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_save_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Class"
        android:layout_marginTop="24dp"/>
</LinearLayout>